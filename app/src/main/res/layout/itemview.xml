<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_margin="6dp"
    android:elevation="9dp"
    android:orientation="vertical"
    android:padding="3dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <TextView
        android:id="@+id/edit_property"
        android:drawableEnd="@drawable/edit_24"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:drawableTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Plot Name"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_plot_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/background"
                android:inputType="textCapSentences"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:textColorHint="#B6B3B5"
                android:textSize="14sp"


                />

            <TextView
                android:id="@+id/tv_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Plot No."
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_plot_no"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:textColorHint="#B6B3B5"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Property type"
                android:textColor="#000"
                android:textSize="12sp"
                android:visibility="gone"
                />


            <TextView
                android:visibility="gone"

                android:id="@+id/tv_property_type"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/text2"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/background"
                android:focusableInTouchMode="false"
                android:inputType="textCapSentences"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:drawableTint="@color/black"
                android:textColorHint="#B6B3B5"
                android:textSize="14sp" />


            <TextView
                android:visibility="gone"

                android:id="@+id/tv_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Precinct"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_precinct"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:textSize="14sp"
                android:drawableTint="@color/black"

                />
            <TextView
                android:visibility="gone"

                android:id="@+id/tv_text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Road"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_road"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:drawableTint="@color/black"
                android:textSize="14sp" />




            <TextView
                android:visibility="gone"

                android:id="@+id/tv_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Sq/Yrds"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_square_yard"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="@drawable/background"
                android:inputType="number"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:textColorHint="#B6B3B5"
                android:textSize="14sp" />

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Price Range"
                android:textColor="#000"
                android:textSize="12sp" />

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:visibility="gone"

                    android:id="@+id/tv_price_range_from"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />


                <TextView

                    android:visibility="gone"

                    android:id="@+id/tv_price_range_to"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#5A5A5A"
                    android:textColorHint="#B6B3B5"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Added By"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_addedBy"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/background"
                android:paddingLeft="8dp"
                android:singleLine="false"
                android:paddingRight="8dp"
                android:textColor="#5A5A5A"
                android:textColorHint="#B6B3B5"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/seemore_btn"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:text="See More"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/expand_more_24"
                android:textAllCaps="false"
                android:drawableTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/seeless_btn"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:text="See Less"
                android:drawableTint="@color/black"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/arrow_up_24"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </ScrollView>



</androidx.cardview.widget.CardView>